# Custom log format
log_format default_redirect '[$time_local] DEFAULT-REDIRECT: $remote_addr to=$http_host$request_uri status=$status';

server {
  listen 80 default_server;
  listen [::]:80 default_server;

  root /var/www/html;

  index index.html index.htm index.nginx-debian.html;

  server_name _;

  location /up {
    access_log /dev/stdout default_redirect;
    default_type text/html;
    return 200 "<html><body><h1>Success</h1><p>Server is up and running!</p></body></html>";
  }

  location / {
    access_log /dev/stdout default_redirect;
    return 301 https://www.$host$request_uri;
  }
}